<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.cafeteria.control.ProductoController">

    <center>
        <TableView fx:id="tablaProductos">
            <columns>
                <TableColumn text="ID" fx:id="colId"/>
                <TableColumn text="Nombre" fx:id="colNombre"/>
                <TableColumn text="Precio" fx:id="colPrecio"/>
                <TableColumn text="Disponible" fx:id="colDisponible"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" padding="10">
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrecio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Disponible:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <CheckBox fx:id="chkDisponible" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Guardar" fx:id="btnGuardar"/>
                <Button text="Actualizar" fx:id="btnActualizar"/>
                <Button text="Eliminar" fx:id="btnEliminar"/>
                <Button text="Limpiar" fx:id="btnLimpiar"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
